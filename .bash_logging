if [ -z "$MFOLTZ_LOGGING_WAS_SOURCED" ]; then

export MFOLTZ_LOG=$HOME/logs/login-$(date '+%Y%m%d-%H%M%S').log
function log() {
  echo "$(date '+%Y%m%d-%H:%M:%S') $1" >> $MFOLTZ_LOG
}

# kilroy was here - don't run more than once.
export MFOLTZ_LOGGING_WAS_SOURCED="true"

fi
